<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="459.0" prefWidth="504.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="com.example.javafx.HelloController">
    <TextArea fx:id="textArea" editable="false" prefHeight="281.0" prefWidth="504.0" VBox.vgrow="ALWAYS" />
    <Pane prefHeight="98.0" prefWidth="504.0" />
    <HBox>
        <TextField fx:id="textField" promptText="Input text Message..." HBox.hgrow="ALWAYS" onKeyPressed="#KeyListener" />
        <Button fx:id="button" onAction="#sendMessage" text="send" />

    </HBox>


</VBox>
